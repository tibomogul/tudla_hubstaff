<tr id="<%= dom_id(task) %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900"><%= task.summary %></div>
    <div class="text-sm text-gray-500"><%= task.details.to_s.truncate(50) %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900"><%= task.project_type %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
      <%= task.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
      <%= task.status || 'pending' %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <button type="button"
            class="text-indigo-600 hover:text-indigo-900"
            data-action="click->task-mapping-modal#open"
            data-task-id="<%= task.id %>"
            data-task-name="<%= task.summary %>"
            data-map-url="<%= map_tudla_task_task_path(task) %>">
      Map to Tudla Task
    </button>
  </td>
</tr>
